#include <iostream>
#include <string>

using namespace std;

void readnumbers(float& number1, float& number2)
{
	cout << "please enter number 1 ?" << endl;
	cin >> number1;

	cout << "please enter number 2 ?" << endl;
	cin >> number2;
}

float area(float a, float h)
{
	return 0.5 * a * h;
}

void printnumbers(float area)
{
	cout << "the area = " << area << " square centimeter." << endl;
}

int main()
{
	float num1, num2;

	readnumbers(num1, num2);
	printnumbers(area(num1, num2));


	return 0;
}
