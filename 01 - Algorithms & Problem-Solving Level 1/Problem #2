#include <iostream>
#include <string>

using namespace std;

string readname()
{
	string name;
	cout << "please enter your name ?" << endl;
	getline(cin, name);

	return name;
}

void printname(string name)
{

	cout << "your name is " << name << endl;

}


int main()
{

	printname(readname());

	return 0;
}
