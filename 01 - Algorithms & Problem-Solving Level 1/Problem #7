#include <iostream>
#include <string>

using namespace std;

float readnumber()
{
	float number;
	cout << "please enter number ?" << endl;
	cin >> number;

	return number;
}

float thehalf(float number)
{

	return number / 2;

}

void printhalfnumber(float number)
{
	string result = "the half of " + to_string(number) + " is " + to_string(thehalf(number));
	cout << endl << result << endl;
}

int main()
{

	printhalfnumber(readnumber());

	return 0;
}
