#include <iostream>
#include <string>

using namespace std;

float readnumbers()
{
	float number1;
	cout << "please enter the A value ?" << endl;
	cin >> number1;

	return number1;
}

float circlearea(float a)
{
	float area = (3.14 * pow(a, 2)) / 4;
	
	return area;
}

void printresult(float area)
{
	cout << "the area = " << area << " square centimeter." << endl;
}

int main()
{
	

	printresult(circlearea(readnumbers()));


	return 0;
}
